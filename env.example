# Firebase Client-Side Configuration (exposed to the browser)
# Find these in your Firebase project settings > General
NEXT_PUBLIC_FIREBASE_API_KEY="your_firebase_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project_id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project_id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_messaging_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# Firebase Cloud Messaging (FCM) VAPID Key (for web push notifications)
# Find this in Firebase project settings > Cloud Messaging > Web configuration (Web push certificates)
NEXT_PUBLIC_FIREBASE_VAPID_KEY="your_fcm_vapid_key"

# Google Cloud Services (if used, e.g., Google Calendar, Google Apps Script)
# Ensure these are appropriately scoped and secured if they grant sensitive access
NEXT_PUBLIC_GAS_PRONTUARIO_URL="your_google_apps_script_url_for_prontuario"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your_google_oauth_client_id"
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET="your_google_oauth_client_secret"
NEXT_PUBLIC_GOOGLE_REDIRECT_URI="your_google_oauth_redirect_uri"

# -----------------------------------------------------------------------------
# Firebase Admin SDK Configuration (SERVER-SIDE ONLY - KEEP THESE SECRET)
# These variables should NOT be prefixed with NEXT_PUBLIC_
# Find these in your Firebase project settings > Service accounts > Generate new private key
# (for project_id, client_email, private_key)
#
# For Vercel: Set these as Environment Variables in your Vercel project settings.
# For local development: Add them to a .env.local file (this file is gitignored).
# -----------------------------------------------------------------------------
FIREBASE_PROJECT_ID="your_firebase_project_id"
FIREBASE_CLIENT_EMAIL="your_firebase_service_account_client_email"
# For the private key, it's often a multi-line string.
# When setting it as an environment variable (e.g., in Vercel or .env.local):
# 1. Copy the entire private key, including -----BEGIN PRIVATE KEY----- and -----END PRIVATE KEY-----.
# 2. Replace all newline characters (\n) within the key with the literal string "\\n".
# Example: "private_key": "-----BEGIN PRIVATE KEY-----\\nMIIEvA...\\n-----END PRIVATE KEY-----\\n"
FIREBASE_PRIVATE_KEY="your_firebase_service_account_private_key"
