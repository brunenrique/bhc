{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "firestore": {
      "host": "127.0.0.1",
      "port": 8085
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5002
    },
    "pubsub": {
      "host": "127.0.0.1",
      "port": 8086
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9100
    },
    "database": {
      "host": "127.0.0.1",
      "port": 9002
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4403
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4503
    },
    "ui": {
      "host": "127.0.0.1"
    },
    "eventarc": {
      "host": "127.0.0.1",
      "port": 9300
    },
    "singleProjectMode": true
  }
}
