{
  "name": "thalamus",
  "description": "Plataforma web para gestão de clínicas de psicologia, com agenda integrada, prontuários seguros e funcionalidades auxiliadas por IA.",
  "version": "0.1.0",
  "private": true,
  "volta": {
    "node": "20.11.0",
    "npm": "10.2.4"
  },
  "scripts": {
    "dev": "next dev --turbopack -p 9003",
    "dev:force": "lsof -ti:9003 | xargs kill -9 || true && sleep 2 && next dev --turbopack -p 9003",
    "start": "next start",
    "build": "next build",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "./scripts/lint-fix.sh",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "echo '⚠️ Use \"npm run test:all\" para rodar os testes corretamente com o Firebase Emulator ativo.' && exit 1",
    "test:all": "./run-tests.sh",
    "test:unit": "vitest run",
    "test:all": "./scripts/test.sh",
    "test:e2e": "playwright test",
    "test:rules": "firebase emulators:exec --project=demo-project \"npx jest --selectProjects firestore\"",
    "jest": "jest",
    "ci": "./scripts/ci.sh",
    "studio:init": "chmod +x ./scripts/studio-init.sh && ./scripts/studio-init.sh",
    "studio:test": "chmod +x ./run-tests.sh && ./run-tests.sh",
    "studio:test:e2e": "npm run test:e2e",
    "studio:test:coverage": "npm run test:coverage",
    "start:local": "./scripts/start.sh",
    "dev:clean": "./scripts/clean.sh",
    "prepare:commit": "./scripts/prepare-commit.sh",
    "prepare": "husky install",
    "backup": "node scripts/backup.js",
    "emulators": "firebase emulators:start --project=thalamus-dev",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:clear": "rm -rf ./emulator-data",
    "snapshot": "npm run emulators:export"
  },
  "dependencies": {
    "@genkit-ai/core": "^1.13.0",
    "@genkit-ai/googleai": "^1.13.0",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.5.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "googleapis": "^150.0.1",
    "lucide-react": "^0.522.0",
    "nanoid": "^5.1.5",
    "next": "^14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.58.1",
    "reactflow": "^11.11.4",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1",
    "genkit": "^1.13.0",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@firebase/rules-unit-testing": "^4.0.1",
    "@next/eslint-plugin-next": "^15.3.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase-tools": "^14.8.0",
    "globals": "^13.24.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.2",
    "lint-staged": "^16.1.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.1",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
